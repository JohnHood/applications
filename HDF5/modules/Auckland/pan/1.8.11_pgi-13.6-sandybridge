#%Module1.0

proc ModulesHelp { } {
  puts stderr "HDF5 1.8.11 compiled with PGI 13.6 (STATIC)"
  puts stderr "TAGS: hdf5"
  puts stderr "URL: http://www.hdfgroup.org/HDF5/"
}

module-whatis "HDF5 1.8.11 compiled with PGI 13.6"

module load pgi/13.6/64bit
module load zlib/1.2.8_pgi-13.6-sandybridge

set root     /share/libs/hdf5/1.8.11/sandybridge/pgi-13.6/serial
prepend-path LD_LIBRARY_PATH $root/lib
prepend-path CPATH           $root/include
prepend-path PATH            $root/bin

