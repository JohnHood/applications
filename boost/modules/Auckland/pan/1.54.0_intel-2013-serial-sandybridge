#%Module1.0

proc ModulesHelp { } {
  puts stderr "BOOST Libraries compiled with Intel Cluster Studio XE 2013 (SERIAL)"
  puts stderr "TAGS: boost"
}

module-whatis "BOOST Libraries compiled with Intel Cluster Studio XE 2013 (SERIAL)"

module load intel/ics-2013

set root     /share/libs/boost/1.54.0/sandybridge/ics-2013/serial
prepend-path LD_LIBRARY_PATH $root/lib
prepend-path CPATH           $root/include
prepend-path PATH            $root/bin

