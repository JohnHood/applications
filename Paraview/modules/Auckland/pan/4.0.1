#%Module

module use /share/easybuild/RHEL6.3/westmere/modules/all
proc ModulesHelp { } {
    puts stderr {   Paraview is a scientific parallel visualizer - Homepage: http://www.paraview.org
    }
}

module-whatis {Paraview is a scientific parallel visualizer - Homepage: http://www.paraview.org}

set root    /share/easybuild/RHEL6.3/westmere/software/Paraview/4.0.1-gmpolf-1.4.8

conflict    Paraview

if { ![is-loaded gmpolf/1.4.8] } {
    module load gmpolf/1.4.8
}

if { ![is-loaded Qt/4.8.5-gmpolf-1.4.8] } {
    module load Qt/4.8.5-gmpolf-1.4.8
}

prepend-path	LD_LIBRARY_PATH		$root/lib
prepend-path	PATH		$root/bin

setenv	EBROOTPARAVIEW		"$root"
setenv	EBVERSIONPARAVIEW		"4.0.1"
setenv	EBDEVELPARAVIEW		"$root/easybuild/Paraview-4.0.1-gmpolf-1.4.8-easybuild-devel"


