#%Module

proc ModulesHelp { } {
    puts stderr {   The FInite element Automatic Tabulator FIAT supports generation of arbitrary order
instances of the Lagrange elements on lines, triangles, and tetrahedra. It is also capable of generating
arbitrary order instances of Jacobi-type quadrature rules on the same element shapes. - Homepage: https://launchpad.net/fiat
    }
}

module-whatis {Description: The FInite element Automatic Tabulator FIAT supports generation of arbitrary order
instances of the Lagrange elements on lines, triangles, and tetrahedra. It is also capable of generating
arbitrary order instances of Jacobi-type quadrature rules on the same element shapes. - Homepage: https://launchpad.net/fiat}

set root    /share/easybuild/RHEL6.3/westmere/software/FIAT/1.5.0-ictce-5.4.0-Python-2.7.8

conflict FIAT

if { ![is-loaded ictce/5.4.0] } {
    module load ictce/5.4.0
}

if { ![is-loaded Python/2.7.8-ictce-5.4.0] } {
    module load Python/2.7.8-ictce-5.4.0
}

if { ![is-loaded ScientificPython/2.8.1-ictce-5.4.0-Python-2.7.8] } {
    module load ScientificPython/2.8.1-ictce-5.4.0-Python-2.7.8
}

if { ![is-loaded sympy/0.7.2-ictce-5.4.0-Python-2.7.8] } {
    module load sympy/0.7.2-ictce-5.4.0-Python-2.7.8
}

prepend-path	LD_LIBRARY_PATH		$root/lib
prepend-path	LIBRARY_PATH		$root/lib

setenv	EBROOTFIAT		"$root"
setenv	EBVERSIONFIAT		"1.5.0"
setenv	EBDEVELFIAT		"$root/easybuild/FIAT-1.5.0-ictce-5.4.0-Python-2.7.8-easybuild-devel"

