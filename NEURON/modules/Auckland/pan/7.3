#%Module

append-path	MODULEPATH	/share/easybuild/RHEL6.3/westmere/modules/all

proc ModulesHelp { } {
    puts stderr {   Empirically-based simulations of neurons and networks of neurons. - Homepage: http://www.neuron.yale.edu/neuron
    }
}

module-whatis {Empirically-based simulations of neurons and networks of neurons. - Homepage: http://www.neuron.yale.edu/neuron}

set root    /share/easybuild/RHEL6.3/westmere/software/NEURON/7.3-goolf-1.6.10

conflict    NEURON

if { ![is-loaded goolf/1.6.10] } {
    module load goolf/1.6.10
}

if { ![is-loaded libreadline/6.2-goolf-1.6.10] } {
    module load libreadline/6.2-goolf-1.6.10
}

if { ![is-loaded ncurses/5.9-goolf-1.6.10] } {
    module load ncurses/5.9-goolf-1.6.10
}

if { ![is-loaded Python/2.7.3-goolf-1.6.10] } {
    module load Python/2.7.3-goolf-1.6.10
}

prepend-path	CPATH		$root/include
prepend-path	LD_LIBRARY_PATH		$root/lib
prepend-path	PATH		$root/x86_64/bin
prepend-path	PYTHONPATH		$root/lib/python2.7/site-packages

setenv	EBROOTNEURON		"$root"
setenv	EBVERSIONNEURON		"7.3"
setenv	EBDEVELNEURON		"$root/easybuild/NEURON-7.3-goolf-1.6.10-easybuild-devel"

setenv	CC		"gcc"

