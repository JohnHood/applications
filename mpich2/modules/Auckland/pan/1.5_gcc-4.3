#%Module1.0

proc ModulesHelp { } {
  puts stderr "MPICH2 1.5 compiled with GNU Compilers 4.3"
  puts stderr "TAGS: mpi"
  puts stderr "URL: http://www.mpich.org " 
}

module-whatis "MPICH2 1.5 compiled with GNU Compilers 4.3"

prepend-path PATH            /usr/mpi/gcc/mpich2-1.5/bin
prepend-path MANPATH         /usr/mpi/gcc/mpich2-1.5/man
prepend-path LD_LIBRARY_PATH /usr/mpi/gcc/mpich2-1.5/lib

set-alias  MPIRUN  "mpirun -np \$LOADL_TOTAL_TASKS -machinefile \$LOADL_HOSTFILE -envall \$*"
