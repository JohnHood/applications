  puts stderr "MPICH2 3.0.4 compiled with GNU Compilers 4.4.6"
  puts stderr "TAGS: mpi"
  puts stderr "URL: http://www.mpich.org " 
}

module-whatis "MPICH2 mpiled with GNU Compilers 4.4.6"

prepend-path PATH            /share/mpi/mpich2/noarch/3.0.4/gcc-4.4.6/normal/bin
