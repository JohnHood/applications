prepend-path LD_LIBRARY_PATH /share/mpi/mpich2/noarch/3.0.4/gcc-4.4.6/normal/lib
prepend-path LIBRARY_PATH /share/mpi/mpich2/noarch/3.0.4/gcc-4.4.6/normal/lib
